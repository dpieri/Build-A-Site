html{
	font-family:'Lucida Grande', Tahoma, arial, sans-serif;
	background: <%= @hard_sides ? "#EBEBEB" : "#fff" %>;
}

body{
	margin: 0;
	padding: 0;
}

<% if @hard_sides %>
#container{
	width: 900px;
	margin: 20px auto 0 auto;
	background: #fff;
	border-radius: 5px 5px 3px 3px;
	padding: 0px 30px 50px 30px;
	border: 1px solid #D3D3D3;
}
#container_shadow{
	width: 960px;
	height: 20px;
	margin: 0 auto;
	background: transparent url(data:image/png;base64,) no-repeat center -3px;
}
<% end %>



/*================================================ Header*/
header{
	width: 100%;
	height: 75px;
	height: <%= @hard_top || @mobile ? 75 : 75 %>px;
	<% if @hard_sides %>
	  border-top: 5px solid rgb(<%=@color_3%>);
	  border-bottom: 1px solid #D3D3D3;
	  background: #fff;
	<% elsif @hard_top %>
	  background: -webkit-radial-gradient( 50% 100px, ellipse farthest-corner, rgba(0,0,0, 0.1), rgba(0,0,0,0.0));
	  border-bottom: 1px solid #a5a5a5;
	<% else %>
	  background: #fff;
	  border-bottom: 1px solid white;
	<% end %>
}

header .content{
	width: 960px;
	margin: 0 auto 0 auto;
}
#logo{
	font-size: 35px;
	height: 50px;
	color: rgb(<%=@color_1%>);
	text-shadow:  0px 1px 0 #ffffff;
	padding: 20px 0 0 0;
	float: left;
}

nav{
	float: right;
	margin: 20px 0 0 0;
	cursor: pointer;
}
nav li{
	float:left;
}

<% if @top_nav == "buttons" %>
nav li{
	background: #fff;
	border-radius: 4px;
	color: rgb(<%=@dark_color%>);
	padding: 8px 10px 8px 10px;
	margin: 0 0 0 13px;
}
nav li:hover{
	background: rgb(<%=@dark_color%>);
	color: #fff;
}
<% elsif @top_nav == "distinct" %>
nav{
	margin: 17px 0 0 0 ;
}
nav ul{
	border: 1px solid rgba(<%=@color_3_dark%>, 0.8);
	border-radius: 5px;
	color: rgba(255,255,255,0.9);
	overflow: hidden;
}
nav li{
	padding: 12px 18px 12px 18px;
	border-right: 1px solid rgb(<%=@color_3_dark%>);
	border-left: 1px solid rgba(255,255,255,0.3);
/*	border-top: 1px solid white;*/  /*If you want it to look more webapp like*/
	background : -webkit-linear-gradient(rgb(<%=@color_3%>), rgba(<%=@color_3%>,0.7)), #202020; 
}
nav li:hover{
	background: rgb(<%=@color_3%>);
	color: #fff;
}
nav li:last-child{
	border-right: none;
}
nav li:first-child{
	border-left: none;
/*	border-left: 1px solid white;*/   /*Likewise*/
}
nav .selected{
	font-weight: bold;
}
<% else %>
nav{
	margin: 32px 8px 0 0;
}
nav li{
	margin: 0 0 0 15px;
	padding: 0 15px 0 0;
	border-right: 1px solid black;
}
nav li:last-child{
	border-right: none;
}
nav .selected{
	font-weight: bold;
}
<% end %>



/*================================================ Top Promotional Stuff */

#top{
	min-height: 300px;
	width: <%= @hard_sides ? 900 : 960%>px;
	margin: 0 auto 0 auto;
	padding: <%= @hard_sides ? 40 : 40 %>px 0 0 0;
	position: relative;
}

#top_background{
	<% if @tb_contrast && @texture %>
	 background: url('/images/<%=@texture_image%>'), 
	 -webkit-gradient(radial, center center, 0, center center, 800, from(rgba(<%=@color_3%>, .70)), to(rgb(<%=@color_3%>)));		
	<% elsif @tb_contrast %>
	background: -webkit-gradient(radial, center center, 0, center center, 1000, from(rgba(<%=@color_3%>, .73)), to(rgb(<%=@color_3%>)));
	 border-bottom: 1px solid rgb(<%= @color_3_dark %>);
	<% else %>
	 background: #fff;
	<% end %>
}

#top hgroup{
	float: right;
	width: 47%;
	text-align: center;
	margin: 40px 0 0 0;
}
h1{
	font-size: 37px;
	color: <%= @tb_contrast ? "#fff" : "#202020"%>;
	text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.4);
}
h2{
	font-size: 16px;
	font-weight: normal;
	color: #e2e2e2;
	color: <%= @tb_contrast ? "#E2E2E2" : "#818181"%>;
	color: #4E4E4E;
	<%= "color: #fff;" if @dark_background %>
	line-height: 19px;
	padding: 0 20px 0 20px;
	margin: 10px 0 0 0 ;
}
h3{
	
}

<% if @mobile %>
#iPhone{
	width: 205px;
	height: 404px;
	left: 140px;
	z-index:3;
	position: absolute;
	background: url('/images/iphone.png') 0 0 no-repeat;
}
#eye_candy{
	position: absolute;
	top: 72px;
	left: 15px;
	width: 175px;
	height: 261px;
	background: url('http://placekitten.com/g/175/261') 0 0 no-repeat;
}
<% else %>
#eye_candy{
	width: 450px;
	height: 301px;
	height: <%= @b2b ? 301 : 350%>px;
	float: left;
	background: url('http://placekitten.com/g/450/350') 0 0 no-repeat;
	z-index: 3;
	position: absolute;
	box-shadow: 0px 0px 5px #AAAAAA;
}
<% end %>

/*================================================ Bottom Promotional Stuff */
#bottom{
	padding: 0 0 0 0;
	<% if @mobile %>
	padding-top:130px;
	<% elsif @b2b %>
	padding-top: 40px;
	<% else %>
	padding-top: 90px;
	<% end %>
	width: <%= @hard_sides ? 900 : 960%>px;
	margin: 0 auto 0 auto;
}

<% if @b2b %>
#endorsements{
	text-align: center;
	color: #7A7A8A;
}

#endorsements .logos{
	width: 868px;
	height: 45px;
	margin: 15px auto 45px auto;
	background: transparent url("/images/logos_2.png") top left no-repeat;
}
#endorsements .logos:hover{
	background-position: 0 -45px;
}
<% end %>

#value_propositions h2{
	font-size: 20px;
	margin: 0 0 8px 8px;
}

#value_propositions details{
	float: left;
	font-size: 14px;
	width: 29%;
	margin: 0 1% 0 3%;
}

#value_propositions details h3{
	font-weight: bold;
	margin: 0 0 5px 0;
}

#value_propositions details img{
	float: <%= @b2b ? 'left' : 'right'%>;
	margin: <%= @b2b ? '3px 11px 80px 0' : '3px 0 0 0'%>;
}

#value_propositions details p{
	line-height: 1.3em;
}


/*========================================================== Footer  */
footer{
	width: 960px;
	margin: 90px auto 0 auto;
	padding: 10px 0 0 0;
	font-size: 12px;
	border-top: 1px solid #E9E9E9;
	color: #7A7A8A;
}
.links a{
	color: rgb(<%= @color_1%>);
	text-decoration: none;
}

/*========================================================== Buttons */
.button{
	margin: 0 auto 20px auto;
	padding: 9px 20px 10px 20px;
	border-radius: <%=@corner_radius %>px;
	background: -webkit-linear-gradient(rgb(<%=@light_color%>), rgb(<%=@dark_color%>)); 
	border: 1px solid rgb(<%=@stroke%>);
	text-shadow: 0px -1px 1px rgba(0,0,0,0.3);
	color: #ffffff;
	font-size: 26px;
	font-weight: bold;
	text-align: center;
	cursor:pointer;
	<% if @inner_glow %>
	 box-shadow: inset 1px 1px 0  rgba(255,255,255,0.42), 1px 1px 0 rgba(0,0,0,0.2);
	<% elsif @drop_shadow %>
	 box-shadow: 1px 1px 0px rgba(0,0,0,0.2);
	<% end %>
}

.button:hover{
	background: rgb(<%=@color_2%>);
}

.button:active{
	background: -webkit-linear-gradient(rgb(<%=@dark_color%>), rgb(<%=@light_color%>));
}

<% if @mobile %>
.button .mobile{
	float: left;
	width: 30px;
	height: 56px;
	background: url('iphone.png');
}
<% end %>

.try_it{
	margin: 20px 0 0 0;
	padding: 9px 23px 10px 23px;
}


/*================================================ Global and utility stuff */
.left{float:left;}
.right{float:right;}
.center{margin: 0 auto 0 auto;}
.center_hack{float: left; position: relative; left: 50%;}
.center_hack .inner{float: left; position: relative; left: -50%;}
.clear{clear:both;}